<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".Activities.DetailsActivity" android:orientation="vertical" android:theme="@style/AppTheme">

	<include layout="@layout/toolbar"/>
	<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" app:srcCompat="@drawable/foodtruckimage" tools:layout_editor_absoluteY="16dp"
			android:id="@+id/foodTruckDetailImage" tools:layout_editor_absoluteX="8dp" android:scaleType="fitStart" android:cropToPadding="true"
			android:adjustViewBounds="true"/>
	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		<TextView
				android:layout_width="match_parent"
				android:textSize="20dp"
				android:layout_height="wrap_content" android:id="@+id/foodTruckNametextView" android:padding="5dp" android:layout_weight="1"/>
		<Button
				android:layout_width="50dp"
				android:layout_height="wrap_content" android:id="@+id/toMapButton" android:layout_weight="1" android:background="@drawable/ic_map"
				android:elevation="0dp" android:backgroundTint="@color/Chocolate"/>
	</LinearLayout>
	<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content" android:id="@+id/foodTruckFoodTypetextView" android:padding="5dp"/>
	<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content" android:id="@+id/foodTruckDescriptiontextView" android:padding="5dp"/>
	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:gravity="right">
		<TextView
				android:text="Opinie"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textSize="20dp"
				android:id="@+id/textView4" android:layout_weight="1"/>
		<RatingBar
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/foodTruckDetailsratingBar"
				android:numStars="5"
				android:layout_gravity="right"
				style="@style/Widget.AppCompat.RatingBar.Indicator" android:layout_weight="1"/>
		<Button
				android:text="Add Opinion"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/addOpinionButton" android:layout_weight="1" android:paddingLeft="10dp"
				style="@style/Widget.AppCompat.Button.Colored"/>
	</LinearLayout>
	<ListView
			android:layout_width="match_parent"
			android:layout_height="match_parent" android:id="@+id/reviewsList"/>
</LinearLayout>